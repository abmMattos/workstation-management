generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String

  reservation Reservation[]

  @@map("user")
}

model Admin {
  id String @id @default(uuid())
  name String
  email String @unique
  password String

  @@map("admin")
}

model Station {
  id String @id @default(uuid())
  name String
  type String
  status String
  capacity Int
  hardwares Hardware[]
  reservations Reservation[]

  @@map("station")
}

model Hardware {
  id String @id @default(uuid())
  name String

  stations Station[]

   @@map("hardware")
}

model Reservation {
  id String @id @default(uuid())
  dateReserve DateTime
  motive String
  guests String
  
  user_id String
  fk_user_id User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  station_id String
  fk_station_id Station @relation(fields: [station_id], references: [id], onDelete: Cascade)

  @@map("reservation")
}

